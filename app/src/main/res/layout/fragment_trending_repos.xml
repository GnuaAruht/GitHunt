<!--            <TextView-->
<!--                android:id="@+id/tvConnection"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center"-->
<!--                android:text="@string/internet_disconnected"-->
<!--                android:textColor="@android:color/white"-->
